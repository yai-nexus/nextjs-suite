{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@yai-nextjs/plugin-support": ["./packages/plugin-support/src"],
      "@yai-nextjs/plugin-support/*": ["./packages/plugin-support/src/*"],
      "@yai-nextjs/create-plugin": ["./packages/create-plugin/src"],
      "@yai-nextjs/plugin-cli": ["./packages/plugin-cli/src"],
      "@yai-nextjs/plugin-devtools": ["./packages/plugin-devtools/src"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}